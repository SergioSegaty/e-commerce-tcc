<div class="modal fade" id="cadastro-modal-produto" aria-hidden="false" aria-labelledby="exampleFormModalLabel"
     role="dialog" tabindex="-1">
    <div class="modal-dialog modal-simple">
        <div class="modal-content">
            <form id="form-cadastro-produto" action="javascript:void(0)">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h5 class="modal-title" id="exampleFormModalLabel">Cadastro de Produto</h5>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-xl-12 form-group">
                            <label for="campo-nome"><h6>Nome</h6></label>
                            <span class="text-danger">*</span>
                            <input type="text" class="form-control" name="nome" id="campo-nome" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 form-group">
                            <label for="campo-select-categoria"><h6>Categoria do Produto</h6></label>
                            <span class="text-danger">*</span>
                            <select id="campo-select-categoria" name="categoria" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-4 form-group">
                            <label for="campo-preco"><h6>Preço</h6></label>
                            <span class="text-danger">*</span>
                            <input type="text" class="form-control" data-affixes-stay="true" data-prefix="R$ " data-thousands="." data-decimal="," name="preco" id="campo-preco" required>
                        </div>
                        <div class="col-xl-4 form-group">
                            <label for="campo-peso"><h6>Peso</h6></label>
                            <span class="text-danger">*</span>
                            <input type="text" class="form-control" name="peso" id="campo-peso" required>
                        </div>
                        <div class="col-xl-4 form-group">
                            <label for="campo-cor"><h6>Cor</h6></label>
                            <input type="text" class="form-control" name="cor" id="campo-cor">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <label for="campo-cor"><h6>Descrição</h6></label>
                            <textarea class="form-control" rows="4" name="descricao" id="campo-descricao"></textarea>
                        </div>
                    </div>
                </div>

            </form>
            <!--Form upload img-->
            <form id="form-cadastro-produto-upload-imagem" method="post" enctype="multipart/form-data" action="@Url.Action("Upload", "Produto")">
                <div class="row">
                    <div class="col-12">
                        <input type="hidden" id="id-produto-hidden" name="id" />
                        <span style="margin-left: 25px;">
                            Upload da Imagem
                        </span>
                        <span class="text-danger">*</span>
                        <span class="text-danger" id="popup-imagem" style="display:none">É necessário uma imagem.</span>
                        <div class="box" style="margin-left: 25px;">
                            <div class="box__input">
                                <input class="box__file" type="file" name="file" id="upload-imagem" data-multiple-caption="{count} files selected" />
                                <label for="file"><strong>Escolha um Arquivo</strong><span class="box__dragndrop"> ou arraste aqui.</span>.</label>
                            </div>
                        </div>
                        <div class="box__uploading">Uploading&hellip;</div>
                        <div class="box__success">Done!</div>
                        <div class="box__error">Error! <span></span>.</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger close-modal" data-dismiss="modal">Fechar</button>
                    <button class="btn btn-success" id="botao-salvar-produto" type="button">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>