<body class="animsition page-login-v3 layout-full" style="overflow: hidden">
    <img src="~/img/wallpaper_full_livros_tcc.png" style="position:absolute; object-fit: cover;"/>
    <!-- Page -->
    <div class="page vertical-align text-center" data-animsition-in="fade-in" data-animsition-out="fade-out">
        <div class="page-content vertical-align-middle animation-slide-top animation-duration-1" style="background-color: rgba(255, 255, 255, 0);">
            <div class="panel" style="background-color: rgba(255, 255, 255, 0.92);">
                <div class="panel-body">
                    <div class="brand">
                        <img class="brand-img" src="~/tema/assets/images/Nova-Logo.png" width="210" height="150">
                    </div>
                    <form method="post" action="/auth/login">
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="text" class="form-control" name="login" />
                            <label class="floating-label">E-mail</label>
                        </div>
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input type="password" class="form-control" name="senha" />
                            <label class="floating-label">Senha</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block btn-lg mt-40">Entrar</button>
                    </form>
                    <p>Não tem Cadastro?     <a href="@Url.Action("Register","Auth")">Cadastre-se</a></p>
                </div>

            </div>
            <footer class="page-copyright page-copyright-inverse">
                <p style="color:black">Site Criado Por:</p>
                <div class="social">
                    <a href="https://github.com/pedroDeLizAmorim" data-toggle="tooltip" title="Pedro Amorim">
                        <img src="~/tema/assets/images/Icone-Github.png" width="20" height="20" />
                    </a>

                    <a href="https://github.com/SergioSegaty" data-toggle="tooltip" title="Sergio Segaty">
                        <img src="~/tema/assets/images/Icone-Github.png" width="20" height="20" />
                    </a>

                    <a href="https://github.com/guilhermeLRibeiroo" data-toggle="tooltip" title="Guilherme Ribeiro">
                        <img src="~/tema/assets/images/Icone-Github.png" width="20" height="20" />
                    </a>
                </div>
            </footer>
        </div>
    </div>
    <!-- End Page -->
