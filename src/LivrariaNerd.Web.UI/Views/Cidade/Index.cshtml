@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Cidades</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item active">Cidade</li>
    </ol>
</div>



<div class="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de Cidades</h3>
        </div>
        <div class="panel-body container-fluid">

            <div class="row row-lg">
                <div class="col-12">
                    <button class="btn btn-primary float-left" id="abrir-modal-cadastro" style="margin-bottom: 15px;" data-toggle="modal" data-target="#cadastro-modal-cidade">
                        <i class="fas fa-plus"></i> Nova Cidade
                    </button>
                    <div class="offset-10 col-lg-2">
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input class="form-control" type="text" id="buscar-cidade" />
                            <label class="floating-label">Busca</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-10">
                <div class="col-12">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr style="text-align:center">
                                <th width="5%">Código</th>
                                <th width="25%">Nome</th>
                                <th width="10%">Sigla do Estado</th>
                                <th width="25%">Ação</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-cidades" style="text-align:center"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="ModalCadastroCidade.cshtml" />
<partial name="ModalAlertApagarCidade.cshtml" />

@section Scripts{
    <script src="~/tema/global/js/Plugin/material.js"></script> 
    <script src="~/js/cidade/cidade-index.js"></script>
    <script src="~/js/cidade/cidade.cadastro.modal.js"></script>
}