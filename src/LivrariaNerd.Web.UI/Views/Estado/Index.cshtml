@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Estados</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item active">Estado</li>
    </ol>
</div>


<div class="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de Estados</h3>
        </div>
        <div class="panel-body container-fluid">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-primary float-left mb-15" data-toggle="modal" data-target="#cadastro-modal-estado" id="novo-estado">
                        <i class="fas fa-plus"></i> Novo Estado
                    </button>
                    <div class="offset-10 col-lg-2">
                        <div class="form-group form-material floating" data-plugin="formMaterial">
                            <input class="form-control" type="text" id="buscar-produto" />
                            <label class="floating-label">Busca</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr style="text-align:center">
                                <th width="5%">Código</th>
                                <th width="20%">Nome</th>
                                <th width="10%">Sigla</th>
                                <th width="25%">Ação</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-estados" style="text-align:center"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<partial name="ModalCadastroEstado.cshtml" />
<partial name="ModalAlertApagarEstado.cshtml" />

@section Scripts{
    <script src="~/tema/global/js/Plugin/material.js"></script>
    <script src="~/js/estado/estado-index.js"></script>
    <script src="~/js/estado/estado.cadastro.modal.js"></script>
}
