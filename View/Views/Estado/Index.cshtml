
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h2 style="text-align:center;">Lista de Estados</h2>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-12">
        <button class="btn btn-primary float-right" style="margin-bottom: 15px;" data-toggle="modal" data-target="#cadastro-modal-estado">Novo Estado</button>
    </div>
</div>

<div class="page-content">
    <div class="panel">
        <div class="panel-body container-fluid">

            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr style="text-align:center">
                                <th width="10%">Código</th>
                                <th width="25%">Sigla</th>
                                <th width="25%">Nome</th>
                                <th width="25%">Ação</th>
                            </tr>
                        </thead>
                        <tbody id="tabela-estados" style="text-align:center"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<partial name="ModalCadastroEstado.cshtml"/>
<partial name="ModalAlertApagarEstado.cshtml"/>

@section Scripts{
    <script src="~/js/estado/estado-index.js"></script>
}