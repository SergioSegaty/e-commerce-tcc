
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h1 class="page-title">Categorias</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../index.html">Home</a></li>
        <li class="breadcrumb-item active">Categorias</li>
    </ol>
</div>


<div class="page-content">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de Categorias</h3>
        </div>
        <div class="row row-lg">
            <div class="panel-body container-fluid">
                <div class="col-md-6 col-lg-4">
                    <div class="col-sm-12 col-md-4 col-xl-1 float-left">
                        <button class="btn btn-primary mr-5" data-toggle="modal"
                                data-target="#modalCadastroCategoria">
                            <i class="fas fa-plus"></i> Nova Categoria
                        </button>
                    </div>
                </div>


                <div class="col-12 mt-2">
                    <div class="col-sm-10 col-md-5 col-lg-2 float-right">
                        <div class="form-group">
                            <input type="text" id="campo-busca"
                                   placeholder="Busca"
                                   class="form-control align-baseline" />
                        </div>
                    </div>
                </div>
                <div class="col-md-10 col-lg-4">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Ação</th>
                            </tr>
                        </tfoot>
                        <tbody id="lista-categorias"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Cadastro Categoria -->

<div class="modal fade" id="modalCadastroCategoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="exampleModalLabel">
                    Cadastro de Categoria
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="campo-nome">
                                Título
                            </label>
                            <input type="text" id="campo-nome"
                                   class="form-control" />
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success"
                        id="categoria-botao-salvar">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</div>