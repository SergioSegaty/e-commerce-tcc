@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <h1 class="page-title">Categorias</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="breadcrumb-item active">Categoria</li>
    </ol>
</div>

<div class="page-content">
    <!-- Painel -->
    <div class="panel">

        <div class="panel-heading">
            <h3 class="panel-title">Lista de Categorias</h3>
        </div>

        <div class="panel-body container-fluid">
            <div class="">
                <button class="btn btn-primary ml-3 pull-right mb-15" data-toggle="modal"
                        data-target="#modalCadastroCategoria">
                    <i class="fas fa-plus"></i> Nova Categoria
                </button>
            </div>


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th width="5%">Código</th>
                        <th>Nome</th>
                        <th width="25%">Ação</th>
                    </tr>
                </thead>
                <tbody id="lista-categorias" class="text-center table-content"></tbody>
            </table>
        </div>
    </div>

</div>
<!-- End Panel -->
</div>

<partial name="ModalCadastroCategoria.cshtml" />
<partial name="ModalAlertApagarCategoria.cshtml" />

@section Scripts {
<script src="~/js/categoria/categoria-index.js"></script>
<script src="~/js/categoria/validation-categoria.js"></script>
}