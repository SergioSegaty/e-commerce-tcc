@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h1 class="page-title">Produtos</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="../index.html">Home</a></li>
        <li class="breadcrumb-item active">Produtos</li>
    </ol>
</div>



<div class="page-content">
    <!-- Painel -->
    <div class="panel">

        <div class="panel-heading">
            <h3 class="panel-title">Lista de Produtos</h3>
        </div>
        <div class="panel-body container-fluid">

            <div class="row row-lg">
                <div class="col-12">

                    <button class="btn btn-primary float-left ml-1" data-target="#cadastro-modal-produto" id="botao-cadastrar-produto" data-toggle="modal"
                            type="button">
                        Cadastrar
                    </button>

                </div>


                <div class="col-12 mt-20">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th width="15%">Código</th>
                                <th>Nome</th>
                                <th width="15%">Preço</th>
                                <th width="15%">Categoria</th>
                                <th width="15%">Ação</th>
                            </tr>
                        </thead>
                        <tbody id="lista-produtos" class="text-center table-content"></tbody>
                    </table>

                </div>


            </div>



        </div>
    </div>
</div>



<partial name="CadastroModalProduto.cshtml" />
<partial name="ModalDeletarAlerta.cshtml" />

@section Scripts{
    <script src="~/js/produto/produto-index.js"></script>
    <script src="~/js/produto/validation-produto.js"></script>
}