<div class="modal fade" id="cadastro-modal-produto" aria-hidden="false" aria-labelledby="exampleFormModalLabel"
     role="dialog" tabindex="-1">
    <div class="modal-dialog modal-simple">
        <form class="modal-content" id="form-cadastro-produto" action="javascript:void(0)">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="exampleFormModalLabel">Produto</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-12 form-group">
                        <input type="text" class="form-control" name="nome" id="campo-nome" placeholder="Nome do produto" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-9 form-group">
                        <select id="campo-select-categoria" name="categoria" class="form-control"></select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-4 form-group">
                        <input type="text" class="form-control" name="preco" id="campo-preco" placeholder="Preço" required>
                    </div>
                    <div class="col-xl-4 form-group">
                        <input type="text" class="form-control" name="peso" id="campo-peso" placeholder="Peso" required>
                    </div>
                    <div class="col-xl-4 form-group">
                        <input type="text" class="form-control" name="cor" id="campo-cor" placeholder="Cor do produto">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <textarea class="form-control" rows="4" name="descricao" id="campo-descricao" placeholder="Descrição do produto"></textarea>
                    </div>
                </div>
                 Upload da Imagem
                <div class="box">

                    <div class="box__input">
                        <input class="box__file" type="file" name="files[]" id="upload-imagem" data-multiple-caption="{count} files selected" multiple />
                        <label for="file"><strong>Escolha um Arquivo</strong><span class="box__dragndrop"> ou arraste aqui.</span>.</label>
                    </div>
                </div>
                <div class="box__uploading">Uploading&hellip;</div>
                <div class="box__success">Done!</div>
                <div class="box__error">Error! <span></span>.</div>

                <div class="row">
                    <div class="col-md-12 mt-20">
                        <button class="btn btn-primary btn-outline" id="botao-salvar-produto" type="button">Salvar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>