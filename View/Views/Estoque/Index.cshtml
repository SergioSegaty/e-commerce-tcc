@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h3 class="text-black  text-center">Controle De Estoque</h3>

<div class="row">
    <div class="col-12">
        <button class="btn btn-outline-primary float-right" data-toggle="modal" data-target="#modal-cadastro-produto">Novo Produto</button>
    </div>
</div>

<div class="page-content">
    <!-- Panel Row Toggler -->
    <div class="panel">
        <header class="panel-heading">
            <h3 class="panel-title">Estoque</h3>
            <div class="pl-30">
                <form class="form-inline">
                    <div class="radio-custom radio-primary mr-15">
                        <input type="radio" name="status" id="status_none" class="filter-ui-status" value="none"
                               checked>
                        <label for="status_none">
                            Nenhum
                        </label>
                    </div>
                    <div class="radio-custom radio-primary mr-15">
                        <input type="radio" name="status" id="status_active" class="filter-ui-status" value="active">
                        <label for="status_active">
                            Active
                        </label>
                    </div>
                    <div class="radio-custom radio-primary mr-15">
                        <input type="radio" name="status" id="status_desativado" class="filter-ui-status"
                               value="sem-estoque">
                        <label for="status_desativado">
                            Sem Estoque
                        </label>
                    </div>
                    <div class="radio-custom radio-primary">
                        <input type="radio" name="status" id="status_suspenso" class="filter-ui-status"
                               value="suspenso">
                        <label for="status_suspenso">
                            Suspenso
                        </label>
                    </div>
                </form>
            </div>
        </header>
        <div class="panel-body">
            <table class="table footable footable-paging footable-paging-center breakpoint-lg" 
                   id="tabela-estoque">
                <thead>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{


    <!-- JavaScripts -->
    <script src="~/js/estoque/estoque-index.js"></script>

}

<partial name="../Produto/CadastroModalProduto">